<Page
    x:Class="ToDoist.Views.MainPage"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:designViewModel="using:ToDoist.DesignViewModels"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">
    <d:Page.DataContext>
        <designViewModel:MainPageViewModel></designViewModel:MainPageViewModel>
    </d:Page.DataContext>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid >
            <Image  Source="ms-appx:///Assets/Todoist_logo.png"  HorizontalAlignment="Left" />
            <Button x:ConnectionId='1' HorizontalAlignment="Right" Width="100" Background="#FFE44332" Foreground="White" VerticalAlignment="Bottom"                            >
               
                <StackPanel Orientation="Horizontal" >
                    <SymbolIcon x:ConnectionId='2' x:Name="Sync" Symbol="Sync" Margin="0,0,10,0"/>
                    <TextBlock Text="Sync" TextAlignment="Right"></TextBlock>
                </StackPanel>
              
            </Button>
        </Grid>        
        <ListView Grid.Row="1" ItemsSource="{Binding ItemListResource}" Margin="20,40,20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" ></ColumnDefinition>
                            <ColumnDefinition Width="10" ></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding content}" Foreground="Black" HorizontalAlignment="Left" FontSize="24" VerticalAlignment="Bottom" TextWrapping="WrapWholeWords" />
                        <TextBlock Grid.Column="2"  Text="{Binding date_string}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#CC000000" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ProgressBar Grid.Row="1" VerticalAlignment="Bottom" VerticalContentAlignment="Stretch" IsIndeterminate="{Binding ProgressBarIsActive}" Background="Transparent"  />
        <TextBlock Grid.Row="2" Text="{Binding ErrorMessage}" VerticalAlignment="Bottom" Foreground="#FFFF6D6D" TextWrapping="Wrap" TextAlignment="Center" />
    </Grid>
</Page>

